          "visualization": {
            "id": "viz.billboard"
          },
          "rawConfiguration": {
            "facet": {
              "showOtherSeries": false
            },
            "nrqlQueries": [
              {
                "accountId": 0,
                "query": "SELECT latest(felix_cluster_num_hosts) AS 'Number of Calico Hosts' FROM Metric WHERE instrumentation.name='remote-write'AND prometheus_server IN ( {{prometheus_server}}) AND instance IN ( {{instance}} )"
              }
            ],
            "platformOptions": {
              "ignoreTimeRange": false
            }
