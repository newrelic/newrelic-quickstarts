{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Observability Pack Configuration",
  "description": "A minimal schema definition for Observability Packs",
  "type": "object",
  "$id": "http://example.com/example.json",
  "default": {},
  "examples": [
    {
      "name": "Apache",
      "description": "The template pack allows you to get visibilility into the performance and available of your example service and dependencies. Use this pack together with the mock up integrations.",
      "level": "New Relic",
      "authors": [
        "New Relic"
      ],
      "instrumentation": [
        {
          "name": "apachi-ohi",
          "type": "type"
        }
      ],
      "title": "Title of Pack",
      "short-description": "Short description of pack",
      "full-description": "Full description of pack",
      "tags": [
        "filters",
        "for",
        "searching"
      ],
      "children": {
        "title": "Title of Pack",
        "description": "Description of child pack",
        "screenshots": "Screenshots of child pack"
      },
      "contributors": [
        {
          "github-username": "username",
          "profile-url": "profiles-url",
          "avatar-url": "avatar-url"
        }
      ],
      "icon": "icon.jpg",
      "logo": "logo.png",
      "website": "https://www.newrelic.com",
      "documentation": {
        "name": "How to use this pack",
        "url": "https://example.com",
        "description": "A brief summary of what this doc entails."
      }
    }
  ],
  "required": [
    "name",
    "description",
    "level",
    "authors"
  ],
  "properties": {
    "name": {
      "$id": "#/properties/name",
      "type": "string",
      "title": "The name schema",
      "description": "The overall name of the Observability Pack",
      "default": "",
      "examples": [
        "Apache"
      ]
    },
    "description": {
      "$id": "#/properties/description",
      "type": "string",
      "title": "The description schema",
      "description": "A long form description for this Observability Pack",
      "minLength": 0,
      "maxLength": 2000,
      "default": "",
      "examples": [
        "The template pack allows you to get visibilility into the performance and available of your example service and dependencies. Use this pack together with the mock up integrations."
      ]
    },
    "level": {
      "$id": "#/properties/level",
      "type": "string",
      "title": "The level schema",
      "description": "The support level provided to this Observability Pack",
      "enum": [
        "New Relic",
        "Verified",
        "Community"
      ],
      "default": "",
      "examples": [
        "New Relic"
      ]
    },
    "authors": {
      "$id": "#/properties/authors",
      "type": "array",
      "title": "The authors schema",
      "description": "The support level provided to this Observability Pack",
      "default": [],
      "examples": [
        [
          "New Relic"
        ]
      ],
      "items": {
        "$id": "#/properties/authors/items",
        "anyOf": [
          {
            "$id": "#/properties/authors/items/anyOf/0",
            "type": "string",
            "title": "The first anyOf schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
              "New Relic"
            ]
          }
        ]
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "instrumentation": {
      "$id": "#/properties/instrumentation",
      "type": "array",
      "title": "The instrumentation schema",
      "description": "An explanation about the purpose of this instance.",
      "default": [],
      "examples": [
        [
          {
            "name": "apachi-ohi",
            "type": "type"
          }
        ]
      ],
      "items": {
        "$id": "#/properties/instrumentation/items",
        "anyOf": [
          {
            "$id": "#/properties/instrumentation/items/anyOf/0",
            "type": "object",
            "title": "The first anyOf schema",
            "description": "An explanation about the purpose of this instance.",
            "default": {},
            "examples": [
              {
                "name": "apachi-ohi",
                "type": "type"
              }
            ],
            "required": [],
            "properties": {
              "name": {
                "$id": "#/properties/instrumentation/items/anyOf/0/properties/name",
                "type": "string",
                "title": "The name schema",
                "description": "The name of the instrumentation",
                "default": "",
                "examples": [
                  "apachi-ohi"
                ]
              },
              "type": {
                "$id": "#/properties/instrumentation/items/anyOf/0/properties/type",
                "type": "string",
                "title": "The type schema",
                "description": "The type of New Relic Product the instrumentation falls under",
                "default": "",
                "examples": [
                  "type"
                ]
              }
            }
          }
        ]
      }
    },
    "title": {
      "$id": "#/properties/title",
      "type": "string",
      "title": "The title schema",
      "description": "The name of the pack displayed everywhere the pack is referenced",
      "default": "",
      "examples": [
        "Title of Pack"
      ]
    },
    "summary": {
      "$id": "#/properties/short-description",
      "type": "string",
      "title": "The summary schema",
      "description": "# Displayed in search results and recommendations. Summarizes a packs functionality.",
      "minLength": 0,
      "maxLength": 250,
      "default": "",
      "examples": [
        "Short description of pack"
      ]
    },
    "tags": {
      "$id": "#/properties/tags",
      "type": "array",
      "title": "The tags schema",
      "description": "Tags for filtering / searching criteria in the New Relic Platform and GraphQL API",
      "default": [],
      "examples": [
        [
          "searchFilters"
        ]
      ],
      "items": {
        "$id": "#/properties/tags/items",
        "anyOf": [
          {
            "$id": "#/properties/tags/items/anyOf/0",
            "type": "string",
            "title": "The first anyOf schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
              "searchFilters"
            ]
          }
        ]
      }
    },
    "children": {
      "$id": "#/properties/children",
      "type": "object",
      "title": "The children schema",
      "description": "Displaying related child packs",
      "default": {},
      "examples": [
        {
          "title": "Title of Pack",
          "description": "Description of child pack",
          "screenshots": "Screenshots of child pack"
        }
      ],
      "required": [],
      "properties": {
        "title": {
          "$id": "#/properties/children/properties/title",
          "type": "string",
          "title": "The title schema",
          "description": "An explanation about the purpose of this instance.",
          "default": "",
          "examples": [
            "Title of Pack"
          ]
        },
        "description": {
          "$id": "#/properties/children/properties/description",
          "type": "string",
          "title": "The description schema",
          "description": "An explanation about the purpose of this instance.",
          "default": "",
          "examples": [
            "Description of child pack"
          ]
        },
        "screenshots": {
          "$id": "#/properties/children/properties/screenshots",
          "type": "string",
          "title": "The screenshots schema",
          "description": "An explanation about the purpose of this instance.",
          "default": "",
          "examples": [
            "Screenshots of child pack"
          ]
        }
      }
    },
    "contributors": {
      "$id": "#/properties/contributors",
      "type": "array",
      "title": "The contributors schema",
      "description": "Contains avatar, GitHub username, and link to GitHub profile for each contributor",
      "default": [],
      "examples": [
        [
          {
            "github-username": "username",
            "profile-url": "profiles-url",
            "avatar-url": "avatar-url"
          }
        ]
      ],
      "items": {
        "$id": "#/properties/contributors/items",
        "anyOf": [
          {
            "$id": "#/properties/contributors/items/anyOf/0",
            "type": "object",
            "title": "The first anyOf schema",
            "description": "An explanation about the purpose of this instance.",
            "default": {},
            "examples": [
              {
                "github-username": "username",
                "profile-url": "profiles-url",
                "avatar-url": "avatar-url"
              }
            ],
            "required": [
              "github-username",
              "profile-url",
              "avatar-url"
            ],
            "properties": {
              "github-username": {
                "$id": "#/properties/contributors/items/anyOf/0/properties/github-username",
                "type": "string",
                "title": "The github-username schema",
                "description": "An explanation about the purpose of this instance.",
                "default": "",
                "examples": [
                  "username"
                ]
              },
              "profile-url": {
                "$id": "#/properties/contributors/items/anyOf/0/properties/profile-url",
                "type": "string",
                "title": "The profile-url schema",
                "description": "An explanation about the purpose of this instance.",
                "default": "",
                "examples": [
                  "profiles-url"
                ]
              },
              "avatar-url": {
                "$id": "#/properties/contributors/items/anyOf/0/properties/avatar-url",
                "type": "string",
                "title": "The avatar-url schema",
                "description": "An explanation about the purpose of this instance.",
                "default": "",
                "examples": [
                  "avatar-url"
                ]
              }
            }
          }
        ]
      }
    },
    "icon": {
      "$id": "#/properties/icon",
      "type": "string",
      "title": "The icon schema",
      "description": "An explanation about the purpose of this instance.",
      "default": "",
      "examples": [
        "icon.jpg"
      ]
    },
    "logo": {
      "$id": "#/properties/logo",
      "type": "string",
      "title": "The logo schema",
      "description": "An explanation about the purpose of this instance.",
      "default": "",
      "examples": [
        "logo.png"
      ]
    },
    "website": {
      "$id": "#/properties/website",
      "type": "string",
      "title": "The website schema",
      "description": "An explanation about the purpose of this instance.",
      "default": "",
      "examples": [
        "https://www.newrelic.com"
      ]
    },
    "documentation": {
      "$id": "#/properties/documentation",
      "type:": "array",
      "title": "The documentation schema",
      "description": "List of documentation links for this pack.",
      "default": [],
      "uniqueItems": true,
      "examples": [
        [
          {
          "name": "How to use this pack",
          "url": "https://example.com",
          "description": "A brief summary of what this doc entails."
          }
        ]
      ],
      "items": {
        "$id": "#/properties/documentation/items",
        "anyOf": [
          {
            "$id": "#/properties/documentation/items/anyOf/0",
            "type": "object",
            "title": "",
            "description": "",
            "default": "",
            "examples": [
              {
                "name": "How to use this pack",
                "url": "https://example.com",
                "description": "A brief summary of what this doc entails."
              }
            ],
            "required": [
              "name", "url"
            ],
            "properties": {
              "name": {
                "$id": "#/properties/documentation/items/anyOf/0/properties/name",
                "type": "string",
                "title": "The name schema",
                "description": "Name or title of the documentation resource.",
                "default": "",
                "examples": [
                  "How to use this pack"
                ]
              },
              "url": {
                "$id": "#/properties/documentation/items/anyOf/0/properties/url",
                "type": "string",
                "title": "The url schema",
                "description": "The URL for the documentation resource.",
                "default": "",
                "examples": [
                  "https://example.com"
                ]
              },
              "description": {
                "$id": "#/properties/documentation/items/anyOf/0/properties/description",
                "type": "string",
                "title": "The description schema",
                "description": "Brief description / summary of this documentation resource.",
                "default": "",
                "examples": [
                  "How to install, enable, and use this pack."
                ]
              }
            }
          }
        ]
      }
    }
  }
}
